gradef(y(x), yp(x));
gradef(yp(x), ypp(x));

F: y(x) * sqrt(1+yp(x)^2);
dF: diff(F,y(x)) - diff(diff(F,yp(x)), x);
ratsimp(dF);

G: sqrt(1+yp(x)^2);
dG: diff(diff(G,yp(x)), x);
ratsimp(dG);

eqn: F - lambda * G;

z: cosh(a*x)*b;
zx: diff(z, x);
zxx: diff(zx, x);

eqn: subst(z, y(x), eqn);
eqn: subst(zx, yp(x), eqn);
eqn: subst(zxx, ypp(x), eqn);
eqn: ratsimp(eqn);

